class Solution:
    def findItinerary(self, tickets):
        graph = {}
        indeg = {}
        
        for src, dst in tickets.items():
            graph[src] = dst
            indeg[dst] = indeg.get(dst, 0) + 1
            indeg[src] = indeg.get(src, 0)
        
        # find start (indeg = 0)
        start = None
        for city in indeg:
            if indeg[city] == 0:
                start = city
                break
        
        route = []
        while start in graph:
            route.append(start)
            start = graph[start]
        route.append(start)
        
        return route
